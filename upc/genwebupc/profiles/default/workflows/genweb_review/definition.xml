<?xml version="1.0"?>
<dc-workflow workflow_id="genweb_review"
             title="Genweb review workflow"
             description="Els usuaris amb el rol review poden publicar un element per tothom."
             state_variable="review_state"
             initial_state="esborrany">
 <permission>Access contents information</permission>
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <state state_id="esborrany"
        title="Draft">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publicaalaintranet"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="intranet"
        title="Intranet">
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="publish"/>  
  <exit-transition transition_id="retiraaesborrany"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="pending"
        title="Pending review">
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="retiraalaintranet"/>
  <exit-transition transition_id="publish"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Reviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="private"
        title="Private">
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="published"
        title="Published">
  <exit-transition transition_id="retiraaesborrany"/>
  <exit-transition transition_id="retiraalaintranet"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Reviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <transition transition_id="hide"
             title="hide"
             new_state="private"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Making an item private means that it will not be visible to anyone but the owner and the site administrator.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=hide" category="workflow">Make private</action>
  <guard>
    <guard-role>Owner</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="publicaalaintranet"
             title="publicaalaintranet"
             new_state="intranet"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Making an item published to intranet means that it will be visible to the members (readers).</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=publicaalaintranet" category="workflow">publicaalaintranet</action>
  <guard>
    <guard-role>Editor</guard-role>
    <guard-role>Manager</guard-role>
    <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="publish"
             title="publish"
             new_state="published"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Publishing the item makes it visible to other users.</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=publish" category="workflow">publish</action>
  <guard>
    <guard-role>Reviewer</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="reject"
             title="reject"
             new_state="esborrany"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Send the item back to draft.</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=reject" category="workflow">reject</action>
  <guard>
    <guard-role>Reviewer</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="retiraaesborrany"
             title="retiraaesborrany"
             new_state="esborrany"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Send the item back to draft.</description>             
  <action url="" category="workflow">retiraaesborrany</action>
  <guard>
    <guard-role>Editor</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="retiraalaintranet"
             title="retiraalaintranet"
             new_state="intranet"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Making an item published to intranet means that it will be visible to the members (readers).</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=retiraalaintranet" category="workflow">retiraalaintranet</action>
  <guard>
    <guard-role>Editor</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="retract"
             title="retract"
             new_state="esborrany"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=retract" category="workflow">retract</action>
  <guard>
    <guard-role>Editor</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="show"
             title="show"
             new_state="esborrany"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Promotes your private item to a draft.</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=show" category="workflow">Make draft</action>
  <guard>
    <guard-role>Owner</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="submit"
             title="submit"
             new_state="pending"
             trigger="USER"
             before_script=""
             after_script="">
  <description>Puts your item in a review queue, so it can be published on the site.</description>             
  <action url="%(content_url)s/content_status_modify?workflow_action=submit" category="workflow">enviaarevisar</action>
  <guard>
    <guard-role>Editor</guard-role>
    <guard-role>Manager</guard-role>
    <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" 
           title="reviewer_queue">
  <action url="%(portal_url)s/search?review_state=pending"
          category="global">Pending reviewer_queue</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" 
         values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <!-- We dont use workflow scripts any more, we use subscribers -->
</dc-workflow>
